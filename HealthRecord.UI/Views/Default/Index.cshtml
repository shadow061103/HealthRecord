
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-1.9.1.min.js"></script>
    <script src="~/Scripts/vue.min.js"></script>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/utility.js"></script>
    <script>
        var human;//使用者資料
        var Tdeeresult;
        var vm;
        var account = getQueryString('account');//網址帶過來
        function GetUserData() {//取得使用者基本資料
            $.ajax({
                url: "http://localhost:64145/api/MemberApi/GetUserData",
                type: "Get",
                contentType: "application/json",
                dataType: 'json',
                data: { Account: account },
                
                success: function (data) {
                    human = data;
                    vm.humandata = data;
                    console.log(data);
                    GetTdeeRecords();
                        },
                error: function (ex)
                   {
                       alert(ex.Message);
                   }
                

            });
        }
        function CalculateTdee() {  //計算TDEE並更新到紀錄表
            console.log('CalculateTdee');
            $.ajax({
                url: "http://localhost:64145/api/MemberApi/CalculateTdee",
                type: "Post",
                contentType: "application/json",
                dataType: 'json',
                data: JSON.stringify(human),//json 物件

                success: function (data) {

                    console.log(data);
                    if (data.Success)
                    {
                        GetTdeeRecords();
                    }

                },
                error: function (ex) {
                    alert(ex.Message);
                }


            });

        }
        function GetTdeeRecords() { //紀錄
            console.log('GetTdeeRecords');
            $.ajax({
                url: "http://localhost:64145/api/MemberApi/GetUserAllRecord",
                type: "Get",
                contentType: "application/json",
                dataType: 'json',
                data: { Id: human.Id },//json 物件

                success: function (data) {
                    console.log('TdeeRecords');
                    console.log(JSON.stringify(data));
                   Tdeeresult = data;
                   vm.tdeerecords = Tdeeresult;
                },
                error: function (ex) {
                    alert(ex.Message);
                }


            });

        }
        function Remove(Id)
        {//post可以參考index postman測試用x-www-from-urlencoded key-value會傳進去但是null 要用application/json raw直接打值不用json格式
            console.log('Remove');
            console.log(Id);
            $.ajax({
                url: "http://localhost:64145/api/MemberApi/DeleteItem",
                type: "POST",
                contentType: "application/json",
                data:JSON.stringify(Id),
                success: function (data) {
                    if (data.Success)
                    {
                        console.log('remove success');
                        GetTdeeRecords();
                    }
                },
                error: function (ex) {
                    alert(ex.Message);
                }


            });
        }
        $(function () {
             vm = new Vue({
                el:'#demo',
                data:{
                    humandata: human,
                    tdeerecords: Tdeeresult
                },
                methods: {
                    Calculate: CalculateTdee,
                    remove: Remove
                }
            });

             console.log('GetUserData start');
             GetUserData();
             console.log('GetUserData end');
        });
    </script>
</head>
<body>
    <div class="row" id="demo">
        <div class="col-md-9" style="margin: 10px">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    使用者資料 年齡{{humandata.Age}},身高{{humandata.Height}},體重{{humandata.Weight}}
                </div>
                <div class="panel-body">
                    <button type="button" id="EditUserData" class="btn btn-primary">修改基本資料</button>
                    
                </div>
                <br />
                <!-- 表格開始 -->
                <div style="margin: 10px" >
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>碳水</th>
                                <th>脂肪</th>
                                <th>蛋白質</th>
                                <th>基礎代謝率</th>
                                <th>TDEE</th>
                                <th>建立日期</th>
                                <th>備註</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr v-for="item in tdeerecords">
                                <td>
                                   
                                    <button class="btn  btn-outline btn-primary btn-xs" v-on:click="remove(item.Id)">刪除</button>
                                </td>
                                <td>
                                    <span>{{item.Carbon}}</span>
                                </td>
                                <td>
                                    <span>{{item.Fat}}</span>
                                </td>
                                <td>
                                    <span>{{item.Protein}}</span>
                                </td>
                                <td>
                                    <span>{{item.BMR}}</span>
                                </td>
                                <td>
                                    <span>{{item.Tdee}}</span>
                                </td>
                                <td>
                                    <span>{{item.CreateDate}}</span>
                                </td>
                                <td>
                                    <span>{{item.Description}}</span>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                    <br />
                    <button type="button" id="Calculate" v-on:click="Calculate" class="btn btn-primary">計算TDEE</button>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
